{
  "name": "@neonevm/token-transfer-core",
  "version": "4.0.0",
  "description": "Core API for the @neonevm/token-transfer project",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "./dist/**/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build": "npm-run-all build:clean compile && echo '{\"type\": \"module\"}' > ./dist/esm/package.json",
    "build:clean": "rm -rf ./dist",
    "prepack": "npm run build",
    "lint": "eslint ./dist",
    "audit": "npm audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonlabsorg/neon-client-transfer.git"
  },
  "bugs": {
    "url": "https://github.com/neonlabsorg/neon-client-transfer/issues"
  },
  "homepage": "https://github.com/neonlabsorg/neon-client-transfer#readme",
  "license": "ISC",
  "dependencies": {
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.77.3",
    "big.js": "^6.2.1",
    "web3-utils": "^4.1.0"
  },
  "devDependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "@typescript-eslint/parser": "^5.43.0",
    "bs58": "^5.0.0",
    "eslint": "8.27.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.1.6"
  }
}
